class Solution {
    public int numberOfSteps(int num) {
        int stepsToZero = 0;

        // 1ST APPROACH
         
        while(num > 0){
            if (num % 2 == 0){
            num /= 2;
            }
            else {
                num--;
            }
            stepsToZero++;
           
        }
        return stepsToZero;
   }
}   
